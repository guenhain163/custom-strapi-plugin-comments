    }
  ],
  "scripts": {
    "build": "tsc && yarn copy-translations",
    "build:dev": "yarn run build && cp ./package.json ./build",
    "clean": "rm -rf build",
    "copy-translations": "copyfiles admin/src/translations/*.json build/",
    "develop": "nodemon --exec \"yarn build:dev\"",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "prepare": "husky install",
    "prepublish:latest": "npm run clean && npm run build && node build/setup-package.js",
    "publish:latest": "cd build && npm publish --tag latest",
    "test:unit": "jest --verbose --coverage",
    "test:unit:ci": "CI=true jest --ci --runInBand --verbose --coverage",
    "test:unit:watch": "jest --verbose --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn test:unit"
    }
  },
  "nodemonConfig": {
    "ext": "js,json,ts",
    "ignore": [
      "./build/**/*",
      "./__mocks__/*",
      "./**/__tests__/*"
    ]
  },
  "dependencies": {
    "@strapi/design-system": "1.18.0",
    "@strapi/plugin-graphql": "^4.24.4",
    "@strapi/types": "4.24.4",
    "@strapi/utils": "^4.24.4",
    "codemirror5": "npm:codemirror@^5.65.11",
    "match-sorter": "^4.0.2",
    "no-profanity": "^1.4.2",
    "react-query": "3.39.3",
    "styled-components": "^5.3.8"
  },
  "devDependencies": {
    "@strapi/helper-plugin": "^4.24.4",
    "@strapi/strapi": "4.24.4",
    "@types/axios": "^0.14.0",
    "@types/codemirror5": "npm:@types/codemirror@^5.60.15",
    "@types/jest": "^29.4.0",
    "@types/markdown-it": "13.0.7",
    "@types/markdown-it-container": "2.0.9",
    "@types/markdown-it-emoji": "2.0.4",
    "@types/markdown-it-footnote": "3.0.3",
    "@types/react-intl": "^3.0.0",
    "@types/react-query": "^1.2.9",
    "@types/sanitize-html": "2.9.5",
    "@types/styled-components": "^5.1.26",
    "codecov": "^3.7.2",
    "copyfiles": "^2.4.1",
    "highlight.js": "^10.4.1",
    "husky": "7.0.4",
    "jest": "^29.4.3",
    "jest-cli": "^29.4.3",
    "jest-junit": "^15.0.0",
    "jest-styled-components": "^7.1.1",
    "koa": "^2.14.1",
    "markdown-it": "^12.3.2",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-container": "^3.0.0",
    "markdown-it-deflist": "^2.1.0",
    "markdown-it-emoji": "^2.0.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-ins": "^3.0.1",
    "markdown-it-mark": "^3.0.1",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "1.0.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^6.4.1",
    "rimraf": "^4.3.0",
    "sanitize-html": "2.12.1",
    "strapi-typed": "^1.0.19",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "@strapi/strapi": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "5.3.4",
    "styled-components": "5.3.3"
  },
  "engines": {
    "node": ">=18.0.0 <=20.x.x",
    "npm": ">=6.0.0"
  },
  "strapi": {
    "name": "comments",
    "displayName": "Comments",
    "description": "Powerful Strapi based comments moderation tool for you and your users",
    "kind": "plugin"
  }
